from golang:1.18 as builder

ENV CGO_ENABLED 1
ENV GO111MODULE on
ENV GOPROXY=https://goproxy.cn,direct

WORKDIR /app
COPY ./go.mod ./go.sum ./
RUN cd ./ && go mod download
COPY ./ ./

RUN make devicediscovery_build binary_dir="/app/bin"

FROM ubuntu:20.04
WORKDIR /app
COPY --from=builder /app/bin/devicediscovery /app/devicediscovery
COPY --from=builder /app/build/script/copy_lib.sh /app/copy_lib.sh
COPY --from=builder /app/build/application/devicediscovery/start.sh /app/start.sh
RUN chmod +x /app/devicediscovery /app/copy_lib.sh /app/start.sh

ENTRYPOINT ["/app/start.sh"]