from swr.cn-south-1.myhuaweicloud.com/krakenplug/builder:v1.0 as builder
WORKDIR /app
COPY ./thirdparty/go-eflib/go.mod ./thirdparty/go-eflib/
RUN cd ./thirdparty/go-eflib && go mod download
COPY ./go.mod ./go.sum ./
RUN cd ./ && go mod download
COPY ./ ./

RUN make deviceexporter_build binary_dir="/app/bin"

FROM ubuntu:20.04
WORKDIR /app
COPY --from=builder /app/bin/deviceexporter /app/deviceexporter
COPY --from=builder /app/build/script/copy_lib.sh /app/copy_lib.sh
COPY --from=builder /app/build/application/deviceexporter/start.sh /app/start.sh
RUN chmod +x /app/deviceexporter /app/copy_lib.sh /app/start.sh

ENTRYPOINT ["/app/start.sh"]